@{
    ViewData["Title"] = "Register";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
<style>
    body {
        
        min-height: 100vh;
    }
    .register-card {
        border-radius: 18px;
        box-shadow: 0 6px 24px rgba(30,60,114,0.12);
        border: none;
        margin-top: 60px;
    }
    .register-card .card-header {
            background: linear-gradient(90deg, #1e3c72 0%, #2a5298 100%);
        border-radius: 18px 18px 0 0;
        border-bottom: none;
    }
    .register-card .card-header h3 {
        color: #FFF;
        font-weight: 700;
        font-size: 2rem;
        margin: 0;
    }
    .register-card .btn-primary {
        background: #ffd700;
        color: #1e3c72;
        font-weight: 600;
        border: none;
        transition: background 0.2s, color 0.2s;
    }
    .register-card .btn-primary:hover {
        background: #1e3c72;
        color: #ffd700;
    }
    .register-card .form-label {
        color: #1e3c72;
        font-weight: 500;
    }
    .register-card .form-control:focus {
        border-color: #ffd700;
        box-shadow: 0 0 0 0.1rem #ffd70033;
    }
    .register-card .text-center a {
        color: #1e3c72;
        font-weight: 500;
        text-decoration: underline;
    }
    .register-card .text-center a:hover {
        color: #ffd700;
    }
</style>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card register-card">
                <div class="card-header">
                    <h3 class="text-center"><i class="bi bi-person-plus-fill me-2"></i>Kayıt Ol</h3>
                </div>
                <div class="card-body">
                    <form id="registerForm">
                        <div class="mb-3">
                            <label for="firstName" class="form-label">Ad</label>
                            <input type="text" class="form-control" id="firstName" required>
                        </div>
                        <div class="mb-3">
                            <label for="lastName" class="form-label">Soyad</label>
                            <input type="text" class="form-control" id="lastName" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">E-posta</label>
                            <input type="email" class="form-control" id="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="registerUsername" class="form-label">Kullanıcı Adı</label>
                            <input type="text" class="form-control" id="registerUsername" required>
                        </div>
                        <div class="mb-3">
                            <label for="registerPassword" class="form-label">Şifre</label>
                            <input type="password" class="form-control" id="registerPassword" required>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                        </div>
                        <div class="text-center mt-3">
                            <p>Zaten hesabınız var mı? <a href="/Home/Login">Giriş Yap</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 